{
  "extends": [
    "semistandard",
    "plugin:react/recommended",
    "react-app"
  ],
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "es6": true
  },
  "rules": {
    "space-before-function-paren": "off",
    "comma-dangle": "off",
    "padded-blocks": "off",
    "react/prop-types": "warn",
    "semi": [2, "never"]
  },
  "settings": {
    "react": {
      "version": "16.3"
    }
  },
  "plugins": [
      "react"
  ]
}
